<% book.post_comments.each do |post_comment| %>
  <tr>

    <td>
      <%= link_to user_path(post_comment.user) do %>
        <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg") %><br>
        <%= post_comment.user.name %>
      <% end %>
    </td>

    <td>
    <%= post_comment.comment %>
    </td>

    <td>
     <% if post_comment.user == current_user %>
      <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",remote: true %>
      <% end %>
    </td>

  </tr>

<% end %>